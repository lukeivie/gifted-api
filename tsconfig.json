{
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2017",
    "baseUrl": ".",
    "paths": {
      "@controllers": ["src/controllers"],
      "@controllers/*": ["src/controllers/*"],
      "@exceptions": ["src/exceptions"],
      "@exceptions/*": ["src/exceptions/*"],
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"],
      "@middleware": ["src/middleware"],
      "@middleware/*": ["src/middleware/*"],
      "@models": ["src/models"],
      "@models/*": ["src/models/*"],
      "@routes": ["src/routes"],
      "@routes/*": ["src/routes/*"],
      "@types": ["src/types"],
      "@types/*": ["src/types/*"],
      "@views": ["src/views"],
      "@views/*": ["src/views/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
